
# BEGIN_KITTY_FONTS
font_family      family="Agave Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 14.0
# END_KITTY_FONTS

# CURSOR
cursor_text_color background
cursor_shape block

# BELL
#enable_audio_bell yes
#visual_bell_duration 2.0 linear

# TAB BAR
tab_bar_edge top
tab_bar_min_tabs 1
tab_bar_style powerline
tab_bar_align left
tab_title_template "{fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{tab.progress_percent}{tab.active_exe}"
active_tab_foreground   #000
active_tab_background   #eee
active_tab_font_style   bold-italic
inactive_tab_foreground #444
inactive_tab_background #999
inactive_tab_font_style normal

# COLOR SCHEME
background_opacity 0.5
background_blur 1
transparent_background_colors red@0.5 #00ff00@0.3

# ADVANCED
editor micro
wayland_enable_ime no
